<?xml version="1.0" encoding="utf-8"?>
<resources>
  <!-- Reference: https://android.googlesource.com/platform/frameworks/support/+/master/v7/appcompat/res/values/themes_base.xml -->
  <!-- Light Theme -->
  <style name="Wasuramoti.MainTheme.Light" parent="Theme.AppCompat.Light">
    <item name="actionBarStyle">@style/Wasuramoti.ActionBar.Light</item>
    <item name="textAllCaps">false</item>
    <item name="android:statusBarColor">@color/main_status_bar</item>
    <item name="general_background">@android:color/white</item>
    <item name="general_text">@android:color/black</item>
  </style>
  <style name="Wasuramoti.ActionBar.Light" parent="Widget.AppCompat.Light.ActionBar.Solid">
    <item name="background">@drawable/actionbar_shape</item>
    <item name="logo">@drawable/actionbar_logo</item>
    <item name="displayOptions">useLogo</item>
  </style>
</resources>
