<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:fillViewport="true" >
<LinearLayout
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:orientation="vertical" >
  <Button
    android:id="@+id/button_fudaset_transfer_export"
    android:text="@string/fudaset_transfer_export"
    android:layout_width="192sp"
    android:layout_height="wrap_content"
    />
  <Button
    android:id="@+id/button_fudaset_transfer_import"
    android:text="@string/fudaset_transfer_import"
    android:layout_width="192sp"
    android:layout_height="wrap_content"
    />
  <karuta.hpnpwd.wasuramoti.PatchedTextView
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:id="@+id/fudaset_transfer_description"
      android:textColor="?attr/generalTextColor"
      />

</LinearLayout>
</ScrollView>
