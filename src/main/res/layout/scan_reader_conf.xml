<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:fillViewport="true" >
<LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
              android:id="@+id/scan_reader"
              android:orientation="vertical" >
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scan_reader_description" />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/scan_reader_list"
    />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/scan_reader_addition"
    />
  <EditText
    android:layout_width="300sp"
    android:layout_height="wrap_content"
    android:id="@+id/scan_reader_additional" />
  <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="@string/scan_reader_description_footnote"
    />
</LinearLayout>
</ScrollView>
