<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:fillViewport="true" >
  <LinearLayout
              android:layout_width="match_parent" android:layout_height="match_parent"
              android:orientation="vertical">

    <CheckBox
      android:id="@+id/autoplay_enable"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="@string/autoplay_enable"
      android:checked="true"
      />
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:id="@+id/autoplay_layout"
      android:orientation="vertical"
      >
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
          <TextView
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="@string/autoplay_span"
            />
          <EditText
            android:id="@+id/autoplay_span"
            android:numeric="decimal"
            android:maxLength="4"
            android:minWidth="48sp"
            android:selectAllOnFocus="true"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            />
          <TextView
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="@string/conf_unit_second"
            />
        </LinearLayout>
        <CheckBox
          android:id="@+id/autoplay_repeat"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="@string/autoplay_repeat"
          />
        <include layout="@layout/horizontal_rule" />
        <CheckBox
          android:id="@+id/autoplay_stop"
          android:layout_width="wrap_content" android:layout_height="wrap_content"
          android:text="@string/autoplay_stop"
          />
        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
          <TextView
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="@string/autoplay_stop_minutes"
            />
          <EditText
            android:id="@+id/autoplay_stop_minutes"
            android:numeric="decimal"
            android:maxLength="4"
            android:minWidth="48sp"
            android:selectAllOnFocus="true"
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            />
          <TextView
            android:layout_height="wrap_content" android:layout_width="wrap_content"
            android:text="@string/conf_unit_minute"
            />
        </LinearLayout>
      </LinearLayout>
    </LinearLayout>
</ScrollView>
