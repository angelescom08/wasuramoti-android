<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="wrap_content" android:layout_height="match_parent"
  android:gravity="center"
  android:paddingLeft="@dimen/title_bar_margin_left"
  >
  <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:paddingRight="@dimen/title_bar_margin_center"
    >
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="@string/title_bar_poem_num"
      android:textSize="@dimen/title_bar_small_text"
      android:textColor="@color/action_bar_primary_text"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:textSize="@dimen/title_bar_large_text"
      android:textColor="@color/action_bar_poem_num_color"
      android:id="@+id/yomi_info_search_poem_num"
      android:paddingLeft="@dimen/title_bar_margin_each"
    />
  </LinearLayout>
  <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content" 
      android:orientation="horizontal"
    >
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="@string/title_bar_kimariji"
      android:textSize="@dimen/title_bar_small_text"
      android:textColor="@color/action_bar_primary_text"
    />
    <karuta.hpnpwd.wasuramoti.PatchedTextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:textColor="@android:color/white"
      android:textSize="@dimen/title_bar_large_text"
      android:paddingLeft="@dimen/title_bar_margin_each"
      android:id="@+id/yomi_info_search_kimariji"
    />
  </LinearLayout>
</LinearLayout>
