<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="match_parent"
  android:fillViewport="true" >
<LinearLayout android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              >
  <Button android:layout_width="96sp" android:layout_height="wrap_content"
    android:text="@string/audio_play" android:id="@+id/audio_play"
    android:layout_alignParentTop="true"
    android:paddingLeft="20sp"
    android:paddingRight="20sp"
    />
  <SeekBar android:id="@+id/volume_seek"
          android:layout_height="32sp"
          android:layout_width="match_parent"
          android:max="100"
          android:progress="50"
          android:layout_marginTop="6dip"
          android:layout_marginBottom="6dip"
           />
  <CheckBox
    android:id="@+id/volume_set_each_play"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:text="@string/volume_set_each_play"
    android:checked="false"
    />
</LinearLayout>
</ScrollView>
