<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
  android:orientation="vertical" >
  <RelativeLayout
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:orientation="horizontal" >
    <Button android:id="@id/button_ok"
      style="@style/Wasuramoti.FudaListButton"
      android:layout_width="96sp" android:layout_height="wrap_content"
      android:text="@string/button_ok"
      android:layout_alignParentTop="true"
      />
    <Button android:id="@id/button_cancel"
      style="@style/Wasuramoti.FudaListButton"
      android:layout_width="96sp" android:layout_height="wrap_content"
      android:text="@string/button_cancel"
      android:layout_alignParentTop="true"
      android:layout_toRightOf="@id/button_ok"
      />
    <ImageButton android:id="@+id/button_invert"
      style="@style/Wasuramoti.FudaListButton"
      android:layout_width="46sp" android:layout_height="46sp"
      android:layout_alignParentTop="true"
      android:layout_alignParentRight="true"
      android:src="@drawable/ic_action_settings"
      />
    <TextView android:id="@+id/fudaseteditlist_fudanum"
      android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:layout_toLeftOf="@id/button_invert"
      android:layout_centerVertical="true"
      android:textColor="?attr/general_text"
      android:textStyle="bold"
      android:textSize="24sp"
      android:gravity="center"
      android:layout_marginRight="14sp"
      />
  </RelativeLayout>
  <ListView
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fudaseteditlist_container"
    android:choiceMode="multipleChoice"
    android:fastScrollEnabled="true"
    >
  </ListView>
</LinearLayout>
